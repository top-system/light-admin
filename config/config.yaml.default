Name: light-admin

Log:
  Level: debug
  Format: console
  Directory: ./logs
  Development: true

HTTP:
  Host: 0.0.0.0
  Port: 2222

SuperAdmin:
  Username: root
  Realname: 超级管理员
  Password: 123123

Auth:
  Enable: true
  TokenExpired: 7200
  IgnorePathPrefixes:
    - /pprof
    - /swagger
    - /api/v1/auth/captcha
    - /api/v1/auth/login

Captcha:
  Enable: false

Casbin:
  Enable: true
  Debug: false
  AutoLoad: false
  AutoLoadInternal: 10
  IgnorePathPrefixes:
    - /pprof
    - /swagger
    - /api/v1/users/me
    - /api/v1/menus/routes
    - /api/v1/auth/captcha
    - /api/v1/auth/login

# Cache configuration
# Type: memory or redis
# Memory cache is suitable for single-instance deployment
# Redis is recommended for multi-instance deployment
Cache:
  Type: memory
  KeyPrefix: app

# Redis cache configuration example:
# Cache:
#   Type: redis
#   Host: 127.0.0.1
#   Port: 6379
#   Password: your_password
#   KeyPrefix: app

# Database configuration
# Engine: mysql or sqlite
Database:
  Engine: mysql
  Name: clean
  Host: 172.16.217.2
  Port: 3306
  Username: root
  Password: sqlpass
  TablePrefix: t
  Parameters: charset=utf8mb4&parseTime=True&loc=Local&allowNativePasswords=true&timeout=5s
  MaxLifetime: 7200
  MaxOpenConns: 150
  MaxIdleConns: 50

# SQLite configuration example (uncomment to use SQLite instead of MySQL):
# Database:
#   Engine: sqlite
#   Name: ./data/app.db    # SQLite database file path
#   TablePrefix: t

# 对象存储配置
# Type: local, minio, aliyun
OSS:
  Type: local
  Local:
    StoragePath: ./uploads
